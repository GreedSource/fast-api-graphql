# Example environment variables for the project
# Copia este archivo a `.env` y reemplaza los valores por reales

# Claves para JWT y serializadores (cambia por secretos fuertes)
SECRET_KEY=change_this_to_a_strong_secret
REFRESH_SECRET_KEY=change_this_to_a_strong_refresh_secret

# Cookies settings
ACCESS_COOKIE_NAME=access_token_cookie
REFRESH_COOKIE_NAME=refresh_token_cookie
SESSION_SECRET_KEY=another_secret_key_for_cookies
SESSION_MAX_AGE=86400  # 1 día en segundos

# MongoDB
# Si usas autenticación: mongodb://user:pass@host:port/dbname
MONGO_URI=mongodb://username:password@host:27017/dbname
MONGO_DB_NAME=graphqlapp

# SMTP / Mail settings
MAIL_SERVER=smtp.mailgun.org
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your_smtp_username
MAIL_PASSWORD=your_smtp_password
MAIL_DEFAULT_SENDER=no-reply@yourdomain.com

# Frontend URL (usado para enlaces de recuperación de contraseña)
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=["http://localhost:5000","http://localhost:5173"]